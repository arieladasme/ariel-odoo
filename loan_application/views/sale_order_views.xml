<odoo>
    <record id="view_order_form_inherit_loan" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.loan</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Button in header -->
            <button name="action_confirm" position="before">
                <button name="action_apply_loan" string="Apply Loan" type="object" class="btn-primary" invisible="state not in ('draft', 'sent')"/>
            </button>

            <!-- Loan applications section -->
            <notebook position="inside">
                <page string="Loan Applications" name="loan_applications">
                    <field name="loan_application_ids" readonly="1">
                        <list>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="loan_amount"/>
                            <field name="interest_rate"/>
                            <field name="loan_term"/>
                            <field name="date_application"/>
                        </list>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>