<odoo>
    <record id="loan_application_form_view" model="ir.ui.view">
        <field name="name">loan.application.form</field>
        <field name="model">loan.application</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,review,approved,rejected,signed"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" placeholder="Tags..."/>
                    <group>
                        <group string="Loan Info">
                            <field name="state"/>
                            <field name="loan_amount"/>
                            <field name="currency_id"/>
                            <field name="interest_rate"/>
                            <field name="loan_term"/>
                            <field name="down_payment"/>
                        </group>
                        <group string="Date Log">
                            <field name="date_application"/>
                            <field name="date_approval"/>
                            <field name="date_rejection"/>
                            <field name="date_signed"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Documentation">
                            <field name="document_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="attachment" widget="binary" filename="name"/>
                                    <field name="type"/>
                                    <field name="state" widget="badge" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" decoration-info="state == 'new'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                        <page string="Rejection Details">
                            <field name="rejection_reason"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="loan_application_list_view" model="ir.ui.view">
        <field name="name">loan.application.list.view</field>
        <field name="model">loan.application</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Name"/>
                <field name="loan_amount"/>
                <field name="interest_rate"/>
                <field name="loan_term"/>
                <field name="date_application"/>
            </list>
        </field>
    </record>

    <record id="action_loan_application" model="ir.actions.act_window">
        <field name="name">Loan Applications</field>
        <field name="res_model">loan.application</field>
        <field name="view_mode">list,form</field>
    </record>


    <record id="loan_application_search_view" model="ir.ui.view">
        <field name="name">loan.application.search.view</field>
        <field name="model">loan.application</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="loan_amount"/>
                <field name="interest_rate"/>
                <field name="loan_term"/>
                <field name="date_application"/>
                <field name="state"/>
                <filter name="draft_filter" string="New" domain="[('state', '=', 'draft')]"/>
                <filter name="approved_filter" string="Offer Approved" domain="[('state', '=', 'approved')]"/>
                <filter name="group_by_date" string="Appliction Date" context="{'group_by': 'date_application'}"/>
                <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>

</odoo>