<odoo>
    <record id="view_loan_application_form" model="ir.ui.view">
        <field name="name">loan.application.form</field>
        <field name="model">loan.application</field>
        <field name="arch" type="xml">
            <form string="Loan Application">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>

                    <group>
                        <group string="Loan Info">
                            <field name="state"/>
                            <!-- <field name="loan_amount"/>
                            <field name="currency_id"/>
                            <field name="interest_rate"/>
                            <field name="loan_term"/> -->
                        </group>
                        <group string="Date Log">
                            <field name="state"/>
                            <!-- <field name="applied_on"/>
                            <field name="approved_on"/>
                            <field name="rejected_on"/>
                            <field name="signed_on"/> -->
                        </group>
                    </group>

                    <notebook>
                        <page string="Notes">
                            <!-- <field name="notes"/> -->
                        </page>
                        <page string="Rejection Details">
                            <!-- <field name="rejection_details"/> -->
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>