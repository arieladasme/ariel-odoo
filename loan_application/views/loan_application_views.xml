<odoo>
    <record id="loan_application_form_view" model="ir.ui.view">
        <field name="name">loan.application.form</field>
        <field name="model">loan.application</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send" string="Send" type="object" class="oe_highlight" invisible="state in ('approved', 'rejected', 'signed', 'cancel')"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"/>
                    <button name="action_reject" string="Reject" type="object" invisible="state == 'approved'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,review,approved,rejected,signed"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" placeholder="Tags..."/>
                    <group>
                        <group string="Loan Info" readonly="state not in ('draft')">
                            <field name="sale_order_id" readonly="state not in ('draft')"/>
                            <field name="partner_id" />
                            <field name="user_id" />
                            <field name="document_count" />
                            <field name="document_count_approved" />
                        </group>
                        <group string="Customer Info">
                            <field name="sale_order_total"/>
                            <field name="down_payment" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="loan_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id"/>
                            <field name="interest_rate"/>
                            <field name="loan_term"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Documentation">
                            <field name="document_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="attachment" widget="binary" filename="name"/>
                                    <field name="type"/>
                                    <button name="action_approve" type="object" icon="fa-check" invisible="state != 'new' or not attachment"/>
                                    <button name="action_reject" type="object" string="Reject" invisible="state != 'new' or not attachment"/>
                                    <field name="state" widget="badge" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'" decoration-info="state == 'new'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                        <page string="Rejection Details">
                            <field name="rejection_reason"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="loan_application_list_view" model="ir.ui.view">
        <field name="name">loan.application.list.view</field>
        <field name="model">loan.application</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Name"/>
                <field name="loan_amount"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="interest_rate"/>
                <field name="loan_term"/>
                <field name="date_application"/>
            </list>
        </field>
    </record>

    <record id="action_loan_application" model="ir.actions.act_window">
        <field name="name">Loan Applications</field>
        <field name="res_model">loan.application</field>
        <field name="view_mode">list,form</field>
    </record>


    <record id="loan_application_search_view" model="ir.ui.view">
        <field name="name">loan.application.search.view</field>
        <field name="model">loan.application</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="loan_amount"/>
                <field name="interest_rate"/>
                <field name="loan_term"/>
                <field name="date_application"/>
                <field name="state"/>
                <filter name="draft_filter" string="New" domain="[('state', '=', 'draft')]"/>
                <filter name="approved_filter" string="Offer Approved" domain="[('state', '=', 'approved')]"/>
                <filter name="group_by_date" string="Appliction Date" context="{'group_by': 'date_application'}"/>
                <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>

    <!-- TAG -->
    <record id="action_loan_tags_view" model="ir.ui.view">
        <field name="name">loan.tag.list</field>
        <field name="model">loan.tag</field>
        <field name="arch" type="xml">
            <list string="Loan Tags">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <record id="action_loan_tags" model="ir.actions.act_window">
        <field name="name">Loan Tags</field>
        <field name="res_model">loan.tag</field>
        <field name="view_mode">list</field>
    </record>

    <record id="loan_tag_form_view" model="ir.ui.view">
        <field name="name">loan.tag.form</field>
        <field name="model">loan.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color_picker"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- DOCUMEN TYPE -->
    <record id="action_loan_document_type" model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">loan.application.document.type</field>
        <field name="view_mode">list</field>
    </record>

    <record id="loan_application_document_type_list_view" model="ir.ui.view">
        <field name="name">lloan.application.document.type.list</field>
        <field name="model">loan.application.document.type</field>
        <field name="arch" type="xml">
            <list string="Document Types">
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="loan_application_document_type_form_view" model="ir.ui.view">
        <field name="name">loan.application.document.type.form</field>
        <field name="model">loan.application.document.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>